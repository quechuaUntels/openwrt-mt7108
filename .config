# Arquitectura Base
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7108=y
# Esta línea debe coincidir con el nombre de tu archivo .dts (mt7108-swc9000)
CONFIG_TARGET_DEVICE_mediatek_mt7108_DEVICE_mt7108-swc9000=y

# Especificaciones de CPU
CONFIG_ARCH="arm"
CONFIG_CPU_TYPE="arm926ej-s"
CONFIG_SOFT_FLOAT=y

# Drivers Críticos (USB y Modem)
CONFIG_PACKAGE_kmod-usb-musb-hdrc=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-rt2800-usb=y
CONFIG_PACKAGE_usbutils=y

# Utilidades necesarias para el despliegue
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_usb-modeswitch=y

