# --- IDENTIDAD DEL HARDWARE ---
CONFIG_TARGET_gemini=y
CONFIG_TARGET_gemini_generic=y
CONFIG_TARGET_gemini_generic_DEVICE_seowon_swc9000=y

# --- ESPECIFICACIONES DE CPU (Tu requisito original) ---
CONFIG_ARCH="arm"
CONFIG_CPU_TYPE="arm926ej-s"
CONFIG_SOFT_FLOAT=y

# --- TOOLCHAIN (FILOSOFÍA MUSL TOTAL) ---
CONFIG_LIBC="musl"
CONFIG_PACKAGE_libmusl=y
CONFIG_TOOLCHAIN_LIBC_MUSL=y
CONFIG_ARM_TOOLCHAIN_USES_MUSL=y

# --- SISTEMA Y MEMORIA ---
CONFIG_TARGET_ROOTFS_INITRAMFS=y
CONFIG_INITRAMFS_COMPRESSION_LZMA=y
CONFIG_PACKAGE_zram-swap=y
CONFIG_PACKAGE_kmod-zram=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_base-files=y

# --- DRIVERS DE HARDWARE (Tus requisitos específicos) ---
CONFIG_PACKAGE_kmod-usb-musb-hdrc=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-rt2800-usb=y
# Servidor de Punto de Acceso y Gestión de Red
CONFIG_PACKAGE_wpad-basic-wolfssl=y
CONFIG_PACKAGE_hostapd-common=y
CONFIG_PACKAGE_kmod-bridge=y
CONFIG_PACKAGE_dnsmasq=y
# por mi
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-fs-jffs2=y
CONFIG_PACKAGE_kmod-uart-16550=y
CONFIG_PACKAGE_usb-modeswitch=y
CONFIG_PACKAGE_usbutils=y
# Herramientas de gestión y diagnóstico
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y

# --- OPTIMIZACIÓN DE TAMAÑO ---
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_USE_SSTRIP=y
CONFIG_SERIAL_8250_CONSOLE=y
# --- SEGURIDAD DE COMPILACIÓN ---
# CONFIG_CONF_CHECK_SKIP_ERROR is not set

# --- EXCLUSIONES CRÍTICAS (Ahorro de espacio) ---
# CONFIG_IPV6 is not set
# CONFIG_PACKAGE_luci is not set
# CONFIG_KERNEL_DEBUG_INFO is not set
# CONFIG_KERNEL_KALLSYMS is not set
# CONFIG_PACKAGE_python3 is not set
# CONFIG_PACKAGE_python3-base is not set
# CONFIG_REALTEK_PHY is not set
# CONFIG_PACKAGE_kmod-realtek is not set
# --- SOLUCIÓN DE BLOQUEO DE COMPILACIÓN (KERNEL 6.6) ---
# Estas opciones evitan las preguntas interactivas que causan el "Broken Pipe"
CONFIG_PHYLIB=y
CONFIG_REALTEK_PHY=y
CONFIG_REALTEK_PHY_HWMON=n
CONFIG_MARVELL_PHY=y
CONFIG_FIXED_PHY=y
CONFIG_ICPLUS_PHY=y
CONFIG_ADIN_PHY=n
CONFIG_AQUANTIA_PHY=n
CONFIG_BROADCOM_PHY=n
CONFIG_CICADA_PHY=n
CONFIG_DAVICOM_PHY=n
CONFIG_LXT_PHY=n
CONFIG_LSI_ET1011C_PHY=n
CONFIG_MICREL_PHY=n
CONFIG_MICROCHIP_PHY=n
CONFIG_MICROSEMI_PHY=n
CONFIG_NATIONAL_PHY=n
CONFIG_QSEMI_PHY=n
CONFIG_SMSC_PHY=n
CONFIG_STE10XP=n
CONFIG_TERANETICS_PHY=n
CONFIG_VITESSE_PHY=n

# --- OPTIMIZACIONES PARA HARDWARE LIMITADO (SOC GEMINI) ---
# Elimina telemetría y funciones modernas pesadas para ganar RAM
# CONFIG_KERNEL_DEBUG_FS is not set
# CONFIG_KERNEL_DEBUG_KERNEL is not set
CONFIG_KERNEL_PRINTK=y
CONFIG_KERNEL_SWAP=y
CONFIG_KERNEL_ZRAM=y

# --- SOPORTE DE BUS (Mantenlo minimalista) ---
CONFIG_USB_SUPPORT=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
# Desactivamos USB 3.0 y otros que el ARM9 no tiene físicamente
# CONFIG_PACKAGE_kmod-usb3 is not set
# CONFIG_PACKAGE_kmod-usb-ohci is not set

# --- ELIMINACIÓN DE PAQUETES CON DEPENDENCIAS ROTAS (LOG PARTE 8) ---
# Estos paquetes causan errores de Python y libcrypt-compat
# CONFIG_PACKAGE_onionshare-cli is not set
# CONFIG_PACKAGE_python3-pysocks is not set
# CONFIG_PACKAGE_python3-unidecode is not set
# CONFIG_PACKAGE_python3-zope-event is not set
# CONFIG_PACKAGE_python3-zope-interface is not set
# CONFIG_PACKAGE_exim is not set
# CONFIG_PACKAGE_luci-app-radicale is not set
# CONFIG_PACKAGE_radicale is not set

# --- ELIMINACIÓN DE DRIVERS DE SERVIDORES Y RAID (LOG PARTE 4 y 5) ---
# Tu SoC Gemini no tiene hardware para estas controladoras SCSI/RAID
# CONFIG_SCSI_LOWLEVEL is not set
# CONFIG_BLK_DEV_MD is not set
# CONFIG_MD_RAID0 is not set
# CONFIG_MD_RAID1 is not set
# CONFIG_MD_RAID10 is not set
# CONFIG_MD_RAID456 is not set
# CONFIG_BLK_DEV_DM is not set
# CONFIG_SCSI_AIC7XXX is not set
# CONFIG_SCSI_AIC79XX is not set
# CONFIG_MEGARAID_SAS is not set

# --- ELIMINACIÓN DE SOPORTE GRÁFICO Y BATERÍAS (LOG PARTE 6 y 7) ---
# Un router no necesita drivers de GPU ni sensores de batería de laptop
# CONFIG_DRM is not set
# CONFIG_DRM_RADEON is not set
# CONFIG_DRM_AMDGPU is not set
# CONFIG_DRM_I915 is not set
# CONFIG_FB is not set
# CONFIG_POWER_SUPPLY is not set

# --- PROTOCOLOS ANTIGUOS O FUERA DE CONTEXTO (LOG PARTE 3) ---
# Ahorro de espacio eliminando protocolos obsoletos o de virtualización
# CONFIG_ATM is not set
# CONFIG_ATALK is not set
# CONFIG_X25 is not set
# CONFIG_PHONET is not set
# CONFIG_HYPERV_STORAGE is not set
# CONFIG_OPENVSWITCH is not set

# --- SISTEMAS DE ARCHIVOS PESADOS (LOG PARTE 7) ---
# Reduce el tamaño del kernel eliminando FS innecesarios
# CONFIG_REISERFS_FS is not set
# CONFIG_JFS_FS is not set
# CONFIG_XFS_FS is not set
